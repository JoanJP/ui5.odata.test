<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog id="editDialog" title="Edit Book" draggable="true" resizable="true">
        <VBox class="sapUiSmallMargin">
            <Label text="Title" labelFor="editInputTitle" class="sapUiTinyMarginTop"/>
            <Input id="editInputTitle" />
            <Label text="ISBN" labelFor="editInputIsbn" class="sapUiTinyMarginTop"/>
            <Input id="editInputIsbn"/>
            <Label text="Description" labelFor="editInputDesc" class="sapUiTinyMarginTop"/>
            <Input id="editInputDesc"/>
            <Label text="Stock" labelFor="editInputStock"/>
            <Input id="editInputStock" type="Number" class="sapUiTinyMarginTop"/>
            <Label text="Price" labelFor="editInputPrice"/>
            <Input id="editInputPrice" type="Number" class="sapUiTinyMarginTop"/>
        </VBox>
        <beginButton>
            <Button text="Save" press=".onEditConfirmPress" type="Emphasized"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press=".onEditCancelPress"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
